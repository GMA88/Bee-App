<InicioScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: [20, 100, 20, 100]
        
        Label:
            text: "Bienvenido"
            font_size: '24sp'
            size_hint_y: None
            height: 60

        Button:
            text: "Ir a Malla Curricular"
            size_hint: None, None
            size: 250, 60
            on_release:
                app.root.current = 'malla_curricular'

<MallaCurricularScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: [20, 20, 20, 20]

        Label:
            text: "Malla Curricular"
            font_size: '24sp'
            size_hint_y: None
            height: 50

        ScrollView:
            size_hint: (1, 1)
            BoxLayout:
                id: materias_layout
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: [10, 10]

        Button:
            text: "Salir"
            size_hint: None, None
            size: 200, 50
            on_release:
                app.root.current = 'inicio'

<TemarioScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: [20, 20, 20, 20]

        Label:
            id: materia_label
            text: "Temario"
            font_size: '24sp'
            size_hint_y: None
            height: 50

        ScrollView:
            size_hint: (1, 1)
            BoxLayout:
                id: temas_layout
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: [10, 10]

        Button:
            text: "Salir"
            size_hint: None, None
            size: 200, 50
            on_release:
                app.root.current = 'malla_curricular'
